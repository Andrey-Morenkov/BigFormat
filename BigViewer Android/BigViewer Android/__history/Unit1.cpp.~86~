//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Unit1.h"
#include "BigAccess\\BigAccess.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
map=NULL;
}

//---------------------------------------------------------------------------
void __fastcall TForm1::MenuItem2Click(TObject *Sender)
{
Close();
}

//---------------------------------------------------------------------------
void __fastcall TForm1::FormCreate(TObject *Sender)
{
LibAttach();
if(InitBigAccess(1024*1024))
	ShowMessage(TEXT("Ошибка инициализации BigAccess!"));
}

//---------------------------------------------------------------------------
void __fastcall TForm1::FormDestroy(TObject *Sender)
{
if(map!=NULL)
	delete(map);
LibDetach();
}

//---------------------------------------------------------------------------
bool __fastcall TForm1::OpenBIG(AnsiString fn)
{
if(map!=NULL)
	delete(map);

map=new TMap(fn.c_str(),Width,Height);

if(map==NULL)
	{
	MessageBox(0,TEXT("Ошибка выделения памяти для BIG!"),TEXT("Map"),MB_ICONEXCLAMATION);
	return false;
	}
else
if(map->GetError())
	{
	wchar_t buf[25];
	_itow(map->GetError(),buf,10);
	MessageBox(0,buf,TEXT("Ошибка загрузки BIG"),MB_ICONEXCLAMATION);
	delete(map);
	map=NULL;
	return false;
	}
else
if(map->Planshet->GetError())
	{
	MessageBox(0,TEXT("Ошибка загрузки планшета!"),TEXT("Planshet"),MB_ICONEXCLAMATION);
	delete(map);
	map=NULL;
	return false;
	}

//Set MapView Mode
MapViewMode=1;
drawer=map->Planshet;

/*
//Layers menu creation
ClearMenu();
int lc=map->GetLayersCnt();
for(int k=0;k<lc;k++)
		{
		NewMenuItem(map->GetLayerName(k),5000+k);
		if(map->GetLayerState(k))
		CheckMenu(5000+k);
		}

//Zoom menu initialization
CheckZoomMenu();
*/

return true;
}

//---------------------------------------------------------------------------
void __fastcall TForm1::MenuItem3Click(TObject *Sender)
{
//Open BIG file
if(!OpenDialog1->Execute())
	return;

if(!OpenBIG(OpenDialog1->FileName))
	ShowMessage(TEXT("Ошибка открытия .Big!"));
else
	{
	HWND hwnd=FindWindowW(NULL,this->Caption.c_str());
	HDC dc=GetDC(hwnd);
	drawer->Draw(dc,Width,Height);
	ReleaseDC(hwnd,dc);

	//HBITMAP srcBitMap = CreateBitmap(Width,Height,map->Planshet->bmi.bmiHeader.biPlanes,map->Planshet->bmi.bmiHeader.biBitCount,map->Planshet->bmp->bmBits);
	Canvas->Bitmap->Assign(map->Planshet->bmp);
	TPersistent
	}

}

//---------------------------------------------------------------------------

void __fastcall TForm1::FormPaint(TObject *Sender, TCanvas *Canvas, const TRectF &ARect)
{
if(drawer==NULL)
	return;
}
